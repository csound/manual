  <refnamediv>
    <refname>cos</refname>

    <refpurpose>
      Performs a cosine function.
          </refpurpose>
  </refnamediv>

  <refsect1>
    <title>Description</title>
    <para>
      Returns the cosine of <emphasis>x</emphasis> (<emphasis>x</emphasis> in radians).
    </para>
  </refsect1>
 
  <refsect1>
    <title>Syntax</title>
    <synopsis><command>cos</command>(x) (no rate
    restriction)</synopsis>
    <synopsis><command>cos</command>(k/i[]) (k- or i-arrays )</synopsis>
  </refsect1>

