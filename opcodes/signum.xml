  <refnamediv>
    <refname>signum</refname>

    <refpurpose>
      Performs a signum function.
    </refpurpose>
  </refnamediv>

  <refsect1>
    <title>Description</title>
    <para>
      Returns the signum of <emphasis>x</emphasis> returning -1, 0 or 1.
    </para>
  </refsect1>
 
  <refsect1>
    <title>Syntax</title>
    <synopsis><command>signum</command>(x) (no rate restriction)</synopsis>
  </refsect1>

