  <refnamediv>
    <refname>prealloc</refname>

    <refpurpose>
      Creates space for instruments but does not run them.
          </refpurpose>
  </refnamediv>
 
  <refsect1>
    <title>Description</title>
    <para>
      Creates space for instruments but does not run them.
    </para>
  </refsect1>

  <refsect1>
    <title>Syntax</title>
    <synopsis><command>prealloc</command> insnum, icount</synopsis>
    <synopsis><command>prealloc</command> "insname", icount</synopsis>
  </refsect1>

  <refsect1>
    <title>Initialization</title>
    <para>
      <emphasis>insnum</emphasis> -- instrument number
    </para>

    <para>
      <emphasis>icount</emphasis> -- number of instrument allocations
    </para>

    <para>
      <emphasis><quote>insname</quote></emphasis> -- A string (in double-quotes) representing a named instrument.
    </para>
  </refsect1>

  <refsect1>
    <title>Performance</title>
    <para>
      All instances of <emphasis>prealloc</emphasis> must be defined in the header section, not in the instrument body.
    </para>
  </refsect1>

